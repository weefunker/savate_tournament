
<p class="text-2xl text-center font-bold mb-4">New Fighter</p>
<div class="flex justify-center">
    <p class="w-12"><%= image_tag "boxing-fighter.png" %></p>
</div>
<div class="flex justify-center">

    <%= render 'form', fighter: @fighter %>
    
    <i class="fas fa-arrow-left"></i>
    <%= link_to 'Back', fighters_path %>
</div>



<%= form_for @fighter, url: fighters_path do |f| %>
   <div class="form-group">
      <%= f.label :file, "Upload CSV File" %>
      <%= f.file_field :file, class: 'form-control-file' %>
   </div>
   <%= f.submit "Upload CSV" %>
<% end %>
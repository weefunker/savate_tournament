
<p class="text-2xl text-center font-bold mb-4">Upload fighters with spreadsheet</p>
<div class="flex justify-center">
    <p class="w-12 m-6"><%= image_tag "spreadsheet.png" %></p>
</div>
<div class="flex justify-center">



<%= form_for @fighter, url: fighters_path do |f| %>
   <div class="w-full max-w-sm flex-1 justify-center space-between">
      <p class="text-sm text-center my-8">Upload spreadsheet file .csv format</p>
      <%= f.file_field :file, class: "my-8" %>
      <%= f.submit "Upload CSV", class:"btn btn-gray " %>
   </div>
   
<% end %>
</div>




<div class="flex justify-center mx-8 my-8">
<p class="text-center"> Download spreadsheet template <%= link_to 'here', root_path + 'Example_SpreadSheet.csv', class:"text-blue-500" %></p>
</div>




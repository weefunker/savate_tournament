
<div class="text-center px-8">
  
  <p class="text-lg font-bold">Tournaments</p>
  
  <div class="flex justify-center my-12">
    <table>
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Contestants</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @tournament_events.each do |tournament_event| %>
          <tr>
            <td><%= tournament_event.event_name %></td>
            <td><%= tournament_event.total_contestants %></td>
            <td><%= tournament_event.tournament_date.to_date %></td>
            <td class="text-sm"><%= link_to 'View', tournament_event %></td>
            <td class="text-sm"><%= link_to 'Edit', edit_tournament_event_path(tournament_event) %></td>
            <td class="text-sm"><%= link_to 'Delete Event', tournament_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <br>
  
  <%= link_to 'New Tournament', new_tournament_event_path, class:"bg-red-600 hover:bg-red-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  %>
</div>
